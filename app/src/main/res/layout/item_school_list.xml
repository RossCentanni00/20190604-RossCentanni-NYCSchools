<?xml version="1.0" encoding="utf-8"?>
<!-- If I had more time I would've gone with something a bit prettier. -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_list_school_name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_list_school_borough"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Divider for the recyclerview, it is better to use ItemDecoration instead, but this is
     quicker to implement -->
    <View
        android:layout_width="match_parent"
        android:layout_height= "1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>